<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center"
  android:orientation="vertical"
  tools:context="com.jaren.likeview.MainActivity">

  <com.jaren.lib.view.LikeView
    android:id="@+id/lv_top"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cirRadius="10dp"
    app:cycleTime="2000"
    app:defaultColor="#ff657487"/>

  <com.jaren.lib.view.LikeView
    android:id="@+id/lv_center"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cirRadius="20dp"
    app:cycleTime="1000"
    app:defaultColor="#ff657487"/>

  <com.jaren.lib.view.LikeView
    android:id="@+id/lv_bottom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cirRadius="40dp"
    app:cycleTime="6600"
    app:defaultColor="#ffcc99cc"
    app:checkedColor="#ffff6600"/>
  <com.jaren.lib.view.LikeView
    android:id="@+id/lv_bottom2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cirRadius="40dp"
    android:visibility="visible"
    app:cycleTime="6600"
    app:defaultLikeIconRes="@mipmap/btn_check_buttonless_off"
    app:checkedLikeIconRes="@mipmap/btn_check_buttonless_on"
    />
</LinearLayout>
